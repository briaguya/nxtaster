{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make and send to main",
            "type": "shell",
            "command": "make -j8 && nxlink -p nxtaster/nxtaster.nro -a 192.168.10.13 out/*.nro",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "DEVKITPRO": "/opt/devkitpro",
                    "DEVKITARM": "/opt/devkitpro/devkitARM",
                    "DEVKITPPC": "/opt/devkitpro/devkitPPC"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "make and debug",
            "type": "shell",
            "command": "make -j8 && nxlink -p nxtaster/nxtaster.nro -a 192.168.10.13 out/*.nro -s",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "DEVKITPRO": "/opt/devkitpro",
                    "DEVKITARM": "/opt/devkitpro/devkitARM",
                    "DEVKITPPC": "/opt/devkitpro/devkitPPC"
                }
            },
            "problemMatcher": []
        },

    ]
}